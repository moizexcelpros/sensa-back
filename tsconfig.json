{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "global.d.ts",
    "typings.d.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}